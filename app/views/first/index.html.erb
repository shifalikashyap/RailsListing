<h1 class="text-center mt-2 mb-5">Welcome New Railway App</h1>

<div class="col-lg-12">
  <div class="card">
      <div class="card shadow-sm p-3 bg-white rounded">
        <div class="row">
          <div class="col-lg-6">
            <%= search_form_for @q, url: :trains do |form|  %>
            <div class="form-group mt-4">
              <%= form.label :source_station %>
              <%= form.text_field :source_station_cont, class: "form-control" %>
            </div>

            <div class="form-group mt-4">
              <%= form.label :last_station %>
              <%= form.text_field :last_station_cont, class: "form-control" %>
            </div>

            <div class="form-group mt-4 mb-3">
              <%= form.submit class: "btn btn-primary btn-lg" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>