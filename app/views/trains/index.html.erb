<div class="col-lg-12">
  <div class="card p-4 mt-5 rounded-0">
    <div class="row">
      <div class="col-lg-6">
        <%= search_form_for @q, url: :trains do |form|  %>
        <div class="form-group mt-4">
          <%= form.label :source_station, "From:" %>
          <%= form.text_field :source_station_cont, class: "form-control" %>
        </div>

        <div class="form-group mt-4">
          <%= form.label :last_station, "To:" %>
          <%= form.text_field :last_station_cont, class: "form-control" %>
        </div>

        <div class="form-group mt-4 mb-3">
          <%= form.submit class: "btn btn-primary btn-lg" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>

  <%= link_to 'New Train', new_train_path, class: "btn btn-primary btn-lg rounded-0 mt-5" %>
  <h2 class="text-center">List of all Trains</h2>

  <table class= "table table-bordered mt-5">
    <thead>
      <tr>
        <th>Name</th>
        <th>Source Station</th>
        <th>Last Station</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @trains.each do |train| %>
      <tr>
        <td><%= train.name %></td>
        <td><%= train.source_station %></td>
        <td><%= train.last_station %></td>
        <td><%= train.start_time %></td>
        <td><%= train.end_time %></td>
        <td><%= link_to 'View', train, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_train_path(train), class:"btn btn-primary" %></td>
        <td><%= link_to 'Destroy', train, class: "btn btn-danger",method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>