<div class="col-lg-12">
  <%= render "shared/search_form", q: @q, url: :trains %>
  <%= link_to 'New Train', new_train_path, class: "btn btn-primary btn-lg rounded-0 mt-5" %>
  <h2 class="text-center">List of all Trains</h2>
  <table class= "table table-bordered mt-5">
    <thead>
      <tr>
        <th>Name</th>
        <th>Source Station</th>
        <th>Last Station</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @trains.each do |train| %>
      <tr>
        <td><%= train.name %></td>
        <td><%= train.source_station %></td>
        <td><%= train.last_station %></td>
        <td><%= link_to 'View', train, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_train_path(train), class:"btn btn-primary" %></td>
        <td><%= link_to 'Destroy', train, class: "btn btn-danger",method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>