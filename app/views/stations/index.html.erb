<div class="col-lg-12">
  <%= link_to 'New Station', new_station_path, class: "btn btn-primary btn-lg rounded-0 mt-5" %>
  <h2 class="text-center">List of all Stations</h2>
  <table class= "table table-bordered mt-5">
    <thead>
      <tr>
        <th>Code</th>
        <th>Name</th>
        <th>State</th>
        <th>Longitude</th>
        <th>Latitude</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @stations.each do |station| %>
      <tr>
        <td><%= station.code %></td>
        <td><%= station.name %></td>
        <td><%= station.state %></td>
        <td><%= station.longitude %></td>
        <td><%= station.latitude %></td>
        <td><%= link_to 'View', station, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_station_path(station), class:"btn btn-primary" %></td>
        <td><%= link_to 'Destroy', station, class: "btn btn-danger",method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>