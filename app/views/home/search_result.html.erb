<div class="col-lg-12">
  <div class="card mt-5">
    <div class="card shadow-sm p-3 bg-white rounded">
      <div class="row">
        <h2 class="text-center" style="color: blue;">Search Train</h2>
        <div class="col-lg-6">
            <%= search_form_for @q, url: 'home/search_result' do |form| %>
              <div class="form-group mt-4">
                <%= form.label :source_station, "Source:" %>
                <%= form.text_field :source_station_cont, class: "form-control" %>
              </div>

              <div class="form-group mt-4">
                <%= form.label :last_station, "Destination:" %>
                <%= form.text_field :last_station_cont, class: "form-control" %>
              </div>

              <div class="form-group mt-4 mb-3">
                <%= form.submit class: "btn btn-primary btn-lg" %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="card mt-5">
    <div class="card shadow-sm p-3 bg-white rounded">
      <div class="row">
      <h2 class="text-center" style="color: seagreen;">Results</h2>
      <table class= "table table-bordered table-hover mt-5">
        <thead>
          <tr>
            <th class="table-info text-center">Name</th>
            <th class="table-info text-center">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @trains.each do |train| %>
          <tr>
            <td><%= train.name %></td>
            <td class="text-center"><%= link_to 'View', train, class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>