<div class="col-lg-12">
  <div class="card mt-5">
    <div class="card shadow-sm p-3 bg-white rounded">
      <div class="row">
        <h2 class="text-center" style="color: blue;">Search Train</h2>
        <div class="col-lg-12">
          <%= render "shared/search_form", q: @q, url: 'search_result' %>
        </div>
      </div>
    </div>
  </div>
  <% if @trains.present? %>
    <% @trains.each do |train| %>
      <div class="card mt-5 mb-5">
        <div class="card shadow-sm p-3 bg-white rounded">
          <p class="font-weight-bold" style="color:blue; font-size: 35px;"><%= train.name %></p>
          <p class="font-weight-normal" style="color:black; font-size:20px; letter-spacing: 0.5px;">Starting From:<%= train.start_time.strftime("%H:%M %p") %></p>
          <p class="font-weight-normal" style="color:black; font-size:20px; letter-spacing: 0.5px;">To End:<%= train.end_time.strftime("%H:%M %p") %></p>
          <!-- button-view -->
          <%= link_to 'Read More', train, class: "btn btn-success btn-lg", style:"width: 150px;" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="card mt-5 mb-5">
      <div class="card-body">
        <p class="lead">Oops! No trains are available for particular Route.</p>
      </div>
    </div>
  <% end %>
</div>