<div class="col-lg-12">
  <div class="card mt-5">
    <div class="card shadow-sm p-3 bg-white rounded">
      <div class="row">
        <h2 class="text-center" style="color: blue;">Search Train</h2>
        <div class="col-lg-12">
          <%= render "shared/search_form", q: @q, url: 'search_result' %>
        </div>
      </div>
    </div>
  </div>

  <% @trains.each do |train| %>
    <div class="card mt-5 mb-5">
      <div class="card shadow-sm p-3 bg-white rounded">
        <p class="font-weight-bold" style="color:blue; font-size: 35px;"><%= train.name %></p>
        <p class="font-weight-normal" style="color:black; font-size:20px;">Starting From:<%= train.start_time.strftime("%H:%M %p") %></p>
        <p class="font-weight-normal" style="color:black; font-size:20px;" >To End:<%= train.end_time.strftime("%H:%M %p") %></p>
      </div>
    </div>
  <% end %>
</div>