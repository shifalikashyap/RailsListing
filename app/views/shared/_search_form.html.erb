<%= search_form_for q, url: url do |form|  %>
  <div class="form-group mt-4">
    <%= form.label :source_station, "From:" %>
    <%= form.text_field :source_station_cont, class: "form-control", required: true %>
  </div>
  <div class="form-group mt-4">
    <%= form.label :last_station, "To:" %>
    <%= form.text_field :last_station_cont, class: "form-control", required: true %>
  </div>
  <div class="form-group mt-4 mb-3">
    <%= form.submit class: "btn btn-primary btn-lg" %>
  </div>
<% end %>